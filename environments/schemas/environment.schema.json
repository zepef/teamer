{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://teamer.local/schemas/environment.schema.json",
  "title": "Teamer Environment Configuration",
  "description": "Schema for project-specific environment configurations",
  "type": "object",
  "required": ["name", "desktops"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable name for the environment"
    },
    "description": {
      "type": "string",
      "description": "Optional description of the environment purpose"
    },
    "workingDirectory": {
      "type": "string",
      "description": "Base working directory for the project"
    },
    "layout": {
      "type": "string",
      "description": "Reference to a layout file name (without .json extension)"
    },
    "desktops": {
      "type": "array",
      "description": "List of virtual desktops to create",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name for the virtual desktop"
          },
          "monitor": {
            "type": "string",
            "enum": ["primary", "secondary", "tertiary", "all"],
            "default": "primary",
            "description": "Which monitor this desktop targets"
          },
          "grid": {
            "type": "object",
            "description": "Grid configuration for window tiling on this desktop",
            "properties": {
              "rows": {
                "type": "integer",
                "minimum": 1,
                "maximum": 12,
                "description": "Number of rows"
              },
              "cols": {
                "type": "integer",
                "minimum": 1,
                "maximum": 12,
                "description": "Number of columns"
              },
              "gap": {
                "type": "integer",
                "minimum": 0,
                "default": 8,
                "description": "Gap between windows in pixels"
              },
              "margin": {
                "type": "integer",
                "minimum": 0,
                "default": 8,
                "description": "Margin around the grid in pixels"
              }
            },
            "required": ["rows", "cols"]
          },
          "windows": {
            "type": "array",
            "description": "Windows to open on this desktop",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["terminal", "app", "browser"],
                  "description": "Type of window to open"
                },
                "profile": {
                  "type": "string",
                  "description": "Profile name for terminal windows"
                },
                "path": {
                  "type": "string",
                  "description": "Executable path for app windows"
                },
                "url": {
                  "type": "string",
                  "description": "URL for browser windows"
                },
                "zone": {
                  "type": "string",
                  "description": "Layout zone to place the window in"
                },
                "cwd": {
                  "type": "string",
                  "description": "Working directory (relative to workingDirectory or absolute)"
                },
                "command": {
                  "type": "string",
                  "description": "Command to run in the terminal"
                },
                "args": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Arguments for app windows"
                },
                "title": {
                  "type": "string",
                  "description": "Custom title for terminal tab (overrides profile)"
                },
                "tabColor": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$",
                  "description": "Tab color in hex format (overrides profile)"
                },
                "tabGroup": {
                  "type": "string",
                  "description": "Group ID for terminal tabs. Terminals with same tabGroup open as tabs in one window."
                },
                "row": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Grid row position (0-indexed, overrides zone)"
                },
                "col": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Grid column position (0-indexed, overrides zone)"
                },
                "rowSpan": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1,
                  "description": "Number of grid rows this window spans"
                },
                "colSpan": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1,
                  "description": "Number of grid columns this window spans"
                }
              }
            }
          }
        }
      }
    },
    "onStart": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Commands to run when starting the environment"
    },
    "onStop": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Commands to run when stopping the environment"
    }
  }
}
