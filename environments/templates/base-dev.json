{
  "$schema": "../schemas/environment.schema.json",
  "name": "Base Development",
  "description": "Minimal development setup with a single terminal and editor",
  "layout": "single-focus",
  "desktops": [
    {
      "name": "Dev",
      "windows": [
        {
          "type": "terminal",
          "profile": "powershell",
          "zone": "main",
          "cwd": "."
        },
        {
          "type": "app",
          "path": "code",
          "zone": "main",
          "args": ["."]
        }
      ]
    }
  ],
  "onStart": [],
  "onStop": []
}
